<% content_for :title, "Shipping Label example" %>
<% content_for :head do %>
  <%= stylesheet_link_tag "example_shipping_label/interface", "data-turbo-track": "reload" %>
<% end %>

<div
  class="interface-bar-bottom"
  data-controller="pagedjs"
  data-pagedjs-stylesheets-value="<%= ["example_shipping_label/print"].map { |stylesheet| asset_url(stylesheet, type: :stylesheet) }.to_json %>"
  data-pagedjs-clear-content-value="false"
  data-action="pagedjs:pages-ready@window->reload-in-place#handlePagesReady"
>
  <div data-pagedjs-target="rendered"></div>

  <template data-pagedjs-target="content">
    <section class="label">
      <div class="running-header">
        <div>
          <h1 class="pacifico">Order <span class="oswald">BOS777812</span></h1>
          <h1 class="pacifico">Shipment <span class="oswald">N1U8K9V0H1</span></h1>
        </div>
        <div class="qrcode"><%= image_tag @qr_code_svg_bg %></div>
      </div>


      <div class="running-footer">
        <h3 class="oswald">Thank you for the order <span class="middle">x</span> DEV <span class="middle">x</span> DEV
          <span class="middle">x</span> DEV</h3>
      </div>

      <ol>
        <li>
          <b>Pink on Pink tshirt</b>
          <div class="details">
            <span>Qty: 1</span>
            <span>Size: medium</span>
            <span>ID: pink-on-pink-tshirt</span>
          </div>
        </li>
      </ol>
      <ol class="total">
        <li>
          <b>1 Item Total</b>
        </li>
      </ol>
    </section>
  </template>

</div>